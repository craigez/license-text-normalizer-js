{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2019"],
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "**/*.test.*"]
}
